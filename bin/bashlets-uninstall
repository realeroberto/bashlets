#
# global variables
################################################################################

BASHLETS_BASE=~/.bashlets
BASHLETS_BIN_TARGETS=~/.local/bin:/usr/local/bin

#
# utilities
################################################################################

function usage()
{
    cat <<-EOF
		Usage:

		    bashlets-uninstall

		Options:

		   -?      display this help and exit
		   -V      output version information and exit

	EOF
} 

function version()
{
    cat <<-EOF
		bashlets-uninstall 0.1
	EOF
} 

function verbose()
{
    $verbose "$@"
}


#
# core logic
################################################################################

function uninstall()
{
    local d f

    rm -fr $BASHLETS_BASE

    # cycle possible binary targets to remove
    IFS=: read -r -a destinations <<< "$BASHLETS_BIN_TARGETS"
    for d in ${destinations[@]}
    do
        rm -f $d/bashlet*
    done
}


#
# parse command line options
################################################################################

while getopts "?V" OPTION
do
    case $OPTION in
		?)
			echo ; version
			echo ; usage
			exit 0
			;;
		V)
			version
			exit 0
			;;
    esac
done

shift $((OPTIND-1))

uninstall


# Local variables:
# mode: shell-script
# sh-basic-offset: 4
# sh-indent-comment: t
# indent-tabs-mode: nil
# End:
# ex: ts=4 sw=4 et filetype=sh
